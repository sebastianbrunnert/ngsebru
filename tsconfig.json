{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "./lib",
        "rootDir": "./src",
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
    },
    "exclude": [
        "./node_modules/*/**",
        "./template/*/**",
        "./lib/*/**",
    ]
}